---
const { id } = Astro.props;
import LinkedInIcon from "./icons/LinkedIn.astro";
import GitHubIcon from "./icons/GitHub.astro";
import MailIcon from "./icons/Mail.astro";
import PythonIcon from "./icons/Python.astro";
import AstroIcon from "./icons/Astro.astro";
import ScalaIcon from "./icons/Scala.astro";
import TailWindIcon from "./icons/Tailwind.astro";
import JavaIcon from "./icons/Java.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import CIcon from "./icons/C.astro";
import CSSIcon from "./icons/CSS.astro";
import HTMLIcon from "./icons/HTML.astro";
import GitIcon from "./icons/Git.astro";

const techStack = [
  {
    lang: "HTML",
    icon: HTMLIcon,
    level: "Avanzado",
  },
  {
    lang: "CSS",
    icon: CSSIcon,
    level: "Intermedio",
  },
  {
    lang: "JavaScript",
    icon: JavaScriptIcon,
    level: "Básico",
  },
  {
    lang: "Python",
    icon: PythonIcon,
    level: "Básico",
  },
  {
    lang: "Astro",
    icon: AstroIcon,
    level: "Intermedio",
  },
  {
    lang: "Tailwind",
    icon: TailWindIcon,
    level: "Intermedio",
  },
  {
    lang: "Scala",
    icon: ScalaIcon,
    level: "Básico",
  },

  {
    lang: "Java",
    icon: JavaIcon,
    level: "Intermedio",
  },
  {
    lang: "C",
    icon: CIcon,
    level: "Avanzado",
  },
  {
    lang: "Git",
    icon: GitIcon,
    level: "Avanzado",
  },
];
---

<div class="w-full bg-neutral-950">
  <section
    id={id}
    class="m-auto min-h-screen max-w-5xl px-4 sm:px-6 lg:px-8 pb-10"
  >
    <header class="pt-20 mb-14">
      <p class="font-semibold text-blue-400 tracking-wide">STACK TECNOLÓGICO</p>
      <h2
        class="font-semibold text-gray-200 text-3xl md:text-4xl mt-2 tracking-tight mb-[-20px]"
      >
        Tecnologías principales
      </h2>
    </header>
    <div class="flex justify-center">
      <div
        class="flex flex-wrap justify-center gap-4 max-w-xl sm:max-w-2xl md:max-w-3xl lg:max-w-4xl"
      >
        {
          techStack.map(({ lang, icon: Icon, level }) => (
            <article class="w-32 border-2 border-white/10 bg-gray-900/20 rounded-xl flex flex-col items-center hover:scale-110 transition-all">
              <h3 class="mt-2 text-xl font-semibold text-zinc-100 tracking-wide">
                {lang}
              </h3>
              <Icon class="size-12 m-4" />
              <div class="mb-4 rounded-full bg-[rgba(22,22,22,255)] px-3 py-1 text-sm text-gray-200 ring-1 ring-white/10">
                {level}
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </section>
  {
    /*"max-w-[30rem] m-auto pt-0 sm:pt-30 min-h-screen flex flex-col justify-center sm:max-w-xl md:max-w-2xl lg:max-w-3xl" */
  }
</div>
